my @required_attributes =
	(
	 'http_port',
	 'ssl_port',
	 'rmi_port',
	 'jmx_port',
	 'db_schema',
	 'UserConfig'
	);

my @required_properties = ();

my %attribute_defaults =
	(
	 heap_size => "256m",
