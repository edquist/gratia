			<tarfileset dir="${base}/common/gratia-security/scripts" mode="744" username="root" group="root">
				<include name="voms-server.sh"/>
			</tarfileset>
			<tarfileset dir="${base}/reporting/gratia-reporting/WebContent/staticReports" mode="755" username="root" group="root">
				<include name="staticReports"/>
